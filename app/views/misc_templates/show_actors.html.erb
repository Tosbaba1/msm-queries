<h1>Actor #<%= @actor.id %> details</h1>
<a href="/actors">Go back</a>

<p>Name</p>
<p><%= @actor.name %> </p>

<p>Dob</p>
<p><%= @actor.dob.strftime("%Y-%m-%e") if @actor.dob %></p>

<p>Bio</p>
<p><%= @actor.bio %> </p>

<p>Image</p>
<p><%= image_tag(@actor.image, width: 150) %></p>

<h2> Filmography </h2>

<table border="1" cellpadding="4" cellspacing="0">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Character name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @actor.characters.each do |char| %>
      <% movie = char.movie %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.year %></td>
        <td><%= movie.director.name %></td>
        <td><%= char.name %></td>
        <td><%= link_to "Show details", "/movies/#{movie.id}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
